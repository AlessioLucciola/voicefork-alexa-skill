{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es6"],
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "lambda",
		"sourceMap": false,
		"allowJs": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"exclude": ["/**/node_modules", "src/local", "__tests__", "**/__mocks__"]
}
