{
    "name": "@amzn/hello-world",
    "version": "1.2.0",
    "description": "alexa utility for quickly building skills",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf lambda",
        "prettify": "npx prettier --write .",
        "build": "npm run clean && tsc --build && cp ./src/package.json ./lambda/package.json",
        "deploy": "npm run prettify && npm run build && git add . && git commit -m 'Deploy' && git push origin master",
        "dev": "npm run build && tsc --watch"
    },
    "author": "Amazon Alexa",
    "license": "Apache License",
    "devDependencies": {
        "@types/node": "^20.1.3",
        "gulp": "^4.0.2",
        "gulp-typescript": "^4.0.2",
        "rimraf": "^5.0.0",
        "ts-node": "^5.0.1",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "ask-sdk-core": "^2.14.0",
        "ask-sdk-model": "^1.71.0",
        "aws-sdk": "^2.326.0",
        "axios": "^1.4.0",
        "date-fns": "^2.30.0"
    }
}
